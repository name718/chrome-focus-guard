{
  "name": "chrome-focus-guard",
  "version": "0.1.0",
  "description": "Chrome extension to help users focus by blocking distractions and managing time",
  "main": "dist/background/service-worker.js",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:simple": "node build-simple.js",
    "build:simple:watch": "node build-simple.js watch",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prebuild:dev": "npm run clean",
    "zip": "npm run build && cd dist && zip -r ../focus-guard-v0.1.0.zip .",
    "zip:dev": "npm run build:dev && cd dist && zip -r ../focus-guard-dev.zip .",
    "zip:simple": "npm run build:simple && cd dist && zip -r ../focus-guard-simple-v0.1.0.zip ."
  },
  "keywords": [
    "chrome-extension",
    "focus",
    "productivity",
    "pomodoro",
    "time-management",
    "distraction-blocking"
  ],
  "author": "FocusGuard Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-transform-runtime": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "fs-extra": "^11.1.1",
    "rimraf": "^5.0.5",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {},
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/chrome-focus-guard.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/chrome-focus-guard/issues"
  },
  "homepage": "https://github.com/your-username/chrome-focus-guard#readme"
}
